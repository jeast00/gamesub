<h2>Edit User</h2>

<%= form_tag @user, method: 'patch' do %>
    <% if @user.errors.any? %>
        <div id="error_message">
            <h4>The following errors have occurred:</h4>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <% if @user.errors.empty? %>
        <div class="field">
    <% else %>
        <div class="field_with_errors">
    <% end %>
        <%= form_for @user, url:'/signup' do |f| %>
            <%= f.label :user_name %>
            <%= f.text_field :user_name %><br><br>

            <%= f.label :first_name %>
            <%= f.text_field :first_name %><br><br>

            <%= f.label :last_name %>
            <%= f.text_field :last_name %><br><br>

            <%= f.label :email %>
            <%= f.email_field :email %><br><br>

            <%= f.label :password %>
            <%= f.password_field :password %><br><br>
            <%= f.submit "edit user" %>    
        <% end %>
    </div>        
<% end %>