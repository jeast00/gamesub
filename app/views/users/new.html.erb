<h2>Sign Up Here!</h2>

<%= form_for users_path, url:'/signup' do |f| %>
    <%= f.label :user_name %>
    <%= f.text_field :user_name %><br><br>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :email %>
    <%= f.email_field :email %><br><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br><br>

    <%= f.submit "Sign Up" %>    
<% end %>